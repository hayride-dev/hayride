{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "hayride",
  "version": "0.1.0",
  "identifier": "com.hayride.dev",
  "build": {
    "frontendDist": "../hayride-ui/dist",
    "devUrl": "http://localhost:8000 ",
    "beforeDevCommand": "trunk serve --config ./hayride-ui/Trunk.toml",
    "beforeBuildCommand": "trunk build --config ./hayride-ui/Trunk.toml"
  },

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "hayride",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
    
  },
  "bundle": {
    "resources": ["../hayride-ui/dist/**/*"],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
